Question 8:

import turtle

def draw_bar(t, height):
    t.begin_fill()
    t.left(90)
    t.forward(height)
    t.write("  "+ str(height))
    t.right(90)
    t.forward(40)
    t.right(90)
    t.forward(height)
    t.left(90)
    t.end_fill()
    t.penup()
    t.forward(10)
    t.pendown()

def DetermineColour():
    if a > 200:
        tess.color("blue", "red")
    elif a <= 200 and a >= 100:
        tess.color("blue", "yellow")
    elif a < 100:
        tess.color("blue", "green")

wn = turtle.Screen()
wn.bgcolor("lightgreen")

tess = turtle.Turtle()
tess.pensize(3)

xs = [48,117,200,240,160,260,220]

for a in xs:
    DetermineColour()
    draw_bar(tess, a)

wn.mainloop()

