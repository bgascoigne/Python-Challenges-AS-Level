Question 6:

def CalculateGrade():
    if (mark >= 75):
        grade = "First"
    elif (mark >= 70 and mark < 75):
        grade = "Upper Second"
    elif (mark >= 60 and mark < 70):
        grade = "Second"
    elif (mark >= 50 and mark < 60):
        grade = "Third"
    elif (mark >= 45 and mark < 50):
        grade = "F1 Supp"
    elif (mark >= 40 and mark < 45):
        grade = "F2"
    elif (mark < 40):
        grade = "F3"
    return grade


mark = int(input("What was the marks: "))
grade = CalculateGrade()
print (grade)

--------------------------------------------------------

def CalculateGrade():
    if (mark >= 75):
        grade = "First"
    elif (mark >= 70 and mark < 75):
        grade = "Upper Second"
    elif (mark >= 60 and mark < 70):
        grade = "Second"
    elif (mark >= 50 and mark < 60):
        grade = "Third"
    elif (mark >= 45 and mark < 50):
        grade = "F1 Supp"
    elif (mark >= 40 and mark < 45):
        grade = "F2"
    elif (mark < 40):
        grade = "F3"
    return grade


marks = [83, 75, 74.9, 70, 69.9, 65, 60, 59.9, 55, 50, 49.9, 45, 44.9, 40, 39.9, 2, 0]
for mark in marks:
    grade = CalculateGrade()
    print (mark, "=", grade)

