Question 2:

def FindDayOfWeek(day):
    if day == 0:
        print("Sunday")
    elif day == 1:
        print("Monday")
    elif day == 2:
        print("Tuesday")
    elif day == 3:
        print("Wednesday")
    elif day == 4:
        print("Thursday")
    elif day == 5:
        print("Friday")
    elif day == 6:
        print("Saturday")

def CalculatingDay():
    endDay = 137 % 7
    day = startDay + endDay
    if day > 6:
        day -= 6
    return day

startDay = int(input("Which day of the week is it?: "))
day = CalculatingDay()
FindDayOfWeek(day)

