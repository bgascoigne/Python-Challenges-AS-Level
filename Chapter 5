Question 1:

def FindDayOfWeek():
    if dayNeeded == 0:
        print("Sunday")
    elif dayNeeded == 1:
        print("Monday")
    elif dayNeeded == 2:
        print("Tuesday")
    elif dayNeeded == 3:
        print("Wednesday")
    elif dayNeeded == 4:
        print("Thursday")
    elif dayNeeded == 5:
        print("Friday")
    elif dayNeeded == 6:
        print("Saturday")

dayNeeded = int(input("Which day of the week is it?: "))
FindDayOfWeek()

