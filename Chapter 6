Question 2:

def test_suite():
    test(day_name(3) == "Wednesday")
    test(day_name(6) == "Saturday")
    test(day_name(42) == None)
    
def day_name(day):
    if(day == 0):
        return ("Sunday")
    elif(day == 1):
        return ("Monday")
    elif(day == 2):
        return ("Tuesday")
    elif(day == 3):
        return ("Wednesday")
    elif(day == 4):
        return ("Thursday")
    elif(day == 5):
        return ("Friday")
    elif(day == 6):
        return ("Saturday")
    else:
        return (None)

