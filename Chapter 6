Question 3:

def test_suite():
    test(day_num("Friday") == 5)
    test(day_num("Sunday") == 0)
    test(day_num(day_name(3)) == 3)
    test(day_name(day_num("Thursday")) == "Thursday")
    
def day_num(dayName):
    if(dayName == "Sunday"):
        return (0)
    elif(dayName == "Monday"):
        return (1)
    elif(dayName == "Tuesday"):
        return (2)
    elif(dayName == "Wednesday"):
        return (3)
    elif(dayName == "Thursday"):
        return (4)
    elif(dayName == "Friday"):
        return (5)
    elif(dayName == "Saturday"):
        return (6)
    else:
        return (None)

