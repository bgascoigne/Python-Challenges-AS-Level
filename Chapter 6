Question 1:

def test_suite():
    test(turn_clockwise("N") == "E")
    test(turn_clockwise("W") == "N")
    test(turn_clockwise(42) == None)
    test(turn_clockwise("rubbish") == None)

def turn_clockwise(x):
    if(x == "N"):
        return("E")
    elif(x == "E"):
        return("S")
    elif(x == "S"):
        return("W")
    elif(x == "W"):
        return("N")
    else:
        return(None)

