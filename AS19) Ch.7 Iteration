Question 1:

def FindingOddNumbers(numList):
    count = 0
    for num in numList:
        if (num % 2) != 0:
            count += 1
    print("There are", count, "odd numbers in this list.")

listOfNumbers = [2,7,89,234567,13,5,6]
FindingOddNumbers(listOfNumbers)

-------------------------------------------------------------------
Question 2:

def TotallingEvenNumbers(numList):
    total = 0
    for num in numList:
        if (num % 2) == 0:
            total += num
    return total

listOfNumbers = [2,7,89,234567,13,5,6]
evenTotal = TotallingEvenNumbers(listOfNumbers)
print("Total of even numbers is:", evenTotal)

-------------------------------------------------------------------
Question 3:

def TotallingOddNumbers(numList):
    total = 0
    for num in numList:
        if (num % 2) != 0:
            total += num
    return total
    
listOfNumbers = [2,7,89,234567,13,5,6]
oddTotal = TotallingOddNumbers(listOfNumbers)
print("Total of odd numbers is:", oddTotal)

